# MongoDB Atlas Configuration (REQUIRED)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (REQUIRED)
FRONTEND_URL=http://localhost:5173

# JWT Configuration (REQUIRED - Generate: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_long
JWT_ACCESS_EXPIRES_IN=5m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (REQUIRED)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password

# AI Configuration (SENSITIVE)
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_api_key_here
OPENROUTER_MODEL=mistralai/mistral-7b-instruct

# Redis Configuration (SENSITIVE)
REDIS_URL=redis://localhost:6379